{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081,
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "hosting": {
      "port": 5000,
      "public": ".next/static",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "run": {
            "serviceId": "YOUR_CLOUD_RUN_SERVICE_ID",
            "region": "YOUR_CLOUD_RUN_REGION"
          }
        }
      ]
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
